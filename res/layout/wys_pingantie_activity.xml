<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/white">
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wf_title_b" >

            <TextView
                style="@style/wf_title_textview"
                android:text="@string/pingantie" />

            <ImageView
                android:onClick="pinganback"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@drawable/lkw_return" />
        </RelativeLayout>
           <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/shouye"
                style="@style/zhuye"
                />

            
        </RelativeLayout>

        <TextView style="@style/hengxian"/>
        <TextView style="@style/dianhuatie"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pingantiedianhua"
            android:textSize="27sp"
            android:layout_marginTop="30dp"/>
        <Button 
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="#33CCFF"
            android:text="@string/pingandianhua"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:onClick="click_pingandianhua"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
    

</RelativeLayout>
